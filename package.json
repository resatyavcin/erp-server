{
  "name": "erp-server",
  "version": "1.0.1",
  "description": "",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start:dev": "nodemon --watch './**/*.ts' --ext ts --exec ts-node server.ts",
    "release": "release-it"
  },
  "keywords": [],
  "author": "resatyavcin",
  "license": "ISC",
  "dependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@prisma/client": "^5.7.1",
    "@release-it/conventional-changelog": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "release-it": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Feature"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  }
}
